
@{
    ViewData["Title"] = "Edit";
    var teamleader = (TeamLeader)ViewBag.teamLeader;
}

@using FinalProjetTestOne.Models.User.UserDto
@using FinalProjetTestOne.Models.User
@model UpdateUserDto

<div class="card form-card">
    <div class="card-header card-header-success">
        <h4 class="card-title">Edit Team Leader</h4>
        <p class="card-category"></p>
    </div>
    <div class="card-body">
        <form asp-action="EditTeamLeader" method="post" class="border px-3 py-3">
            <input type="hidden" asp-for="Id" value="@teamleader.Id" />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row">
                <div class="col-md-12">

                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="bmd-label-floating text-primary" asp-for="FirstName">First Name</label>
                        <input type="text" class="form-control" asp-for="FirstName" value="@teamleader.FirstName" required>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="bmd-label-floating text-primary" asp-for="LastName">Last Name</label>
                        <input type="text" class="form-control" asp-for="LastName" value="@teamleader.LastName" required>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="bmd-label-floating text-primary" asp-for="Age">Age</label>
                        <input type="number" class="form-control" asp-for="Age" value="@teamleader.Age" required>
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="bmd-label-floating text-primary" asp-for="UserName">Username</label>
                        <input type="text" class="form-control" asp-for="UserName" value="@teamleader.UserName" required>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="bmd-label-floating text-primary" asp-for="Email">Email</label>
                        <input type="email" class="form-control" asp-for="Email" value="@teamleader.Email"  required>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-success pull-right">Edit</button>
            <div class="clearfix"></div>
        </form>
    </div>
</div>