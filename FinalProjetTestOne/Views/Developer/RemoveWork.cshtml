@model FinalProjetTestOne.Models.Work

@{
    ViewData["Title"] = "RemoveWork";
    var work = (Work)ViewBag.Work;
}




<div>

    <div class="card form-card item-card card-block work">
        <div class="card-header">
            <h3 class="text-danger">Are you sure you want to delete this?</h3>
            <span><hr class="bg-danger" /></span>
        </div>
        <div class="card-body">
           <ul>
               <li>Titlr : @work.Title</li>
               <li class="d-flex flex-column mt-3">
                   <span class="text-muted">Description : </span>
                   <p class="ml-3">
                       @work.Description
                   </p>
               </li>
           </ul>
        </div>
        <div class="card-footer">
            <form asp-action="RemoveWork">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        </div>
    </div>

</div>
